<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="176dp"
        android:layout_height="39dp"
        android:text="My Animal App"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_monkey"
        android:layout_width="380dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109">

        <ImageView
            android:id="@+id/monkey_img"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="5dp"
            app:srcCompat="@drawable/monkey" />

        <TextView
            android:id="@+id/monkey_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Чіпсик"
            android:textColor="#3A3838"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/monkey_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:text="Мавпочка"
            android:textColor="#404040"></TextView>

        <Button
            android:id="@+id/monkey_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="25dp"
            android:onClick="onClickOpenSecondaryMonkey"
            android:text="Деталі"
            android:textSize="12sp"></Button>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_parrot"
        android:layout_width="380dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_monkey"
        app:layout_constraintVertical_bias="0.03">
        <ImageView
            android:id="@+id/parrot_img"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/papuga"
            android:padding="5dp"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/parrot_info"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Джонік"
            android:textColor="#3A3838"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/parrot_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:text="Папуга Артема"
            android:textColor="#404040"></TextView>

        <Button
            android:id="@+id/parrot_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="25dp"
            android:onClick="onClickOpenSecondaryParrot"
            android:text="Деталі"
            android:textSize="12sp"></Button>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_spider"
        android:layout_width="380dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_parrot"
        app:layout_constraintVertical_bias="0.04">
        <ImageView
            android:id="@+id/spider_image"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/spider"
            android:padding="5dp"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/spider_info"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Павук"
            android:textColor="#3A3838"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/spider_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:text="Павук"
            android:textColor="#404040"></TextView>

        <Button
            android:id="@+id/button_hamster"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="25dp"
            android:onClick="onClickOpenSecondarySpider"
            android:text="Деталі"
            android:textSize="12sp"></Button>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>